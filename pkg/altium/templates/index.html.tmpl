<!doctype html>
<html>
<head>
    <title>Altium Viewer</title>
    <script src="assets/embed.js"></script>
    <style>
        html, body {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
        }
    </style>
</head>
<body>
<script>
    // Read UUID from URL query parameters
    const urlParams = new URLSearchParams(window.location.search);
    // Default to 7701036f-fbdc-4a91-9d84-5c5e5d6f3390 if no UUID provided
    const uuid = urlParams.get('uuid') || '7701036f-fbdc-4a91-9d84-5c5e5d6f3390';
    
    // Create the viewer div with the UUID
    const viewerDiv = document.createElement('div');
    viewerDiv.className = 'altium-ecad-viewer';
    viewerDiv.setAttribute('data-project-src', uuid);
    viewerDiv.style.cssText = 'overflow: hidden; width: 100%; height: 100%;';
    document.body.appendChild(viewerDiv);
</script>
</body>
</html>