{
  "name": "altium-viewer-storybook",
  "version": "1.0.0",
  "description": "Storybook for Altium Viewer Vue components",
  "scripts": {
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook",
    "test-storybook:ci": "test-storybook --url http://localhost:6006 --maxWorkers=2",
    "test-storybook:watch": "test-storybook --watch",
    "test-storybook:coverage": "test-storybook --coverage",
    "chromatic": "npx chromatic",
    "serve-storybook": "npx http-server storybook-static -p 6006"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-a11y": "^10.1.8",
    "@storybook/addon-docs": "^10.1.8",
    "@storybook/addon-links": "^10.1.8",
    "@storybook/addon-mcp": "^0.1.6",
    "@storybook/addon-vitest": "^10.1.8",
    "@storybook/blocks": "^8.6.14",
    "@storybook/test-runner": "^0.24.2",
    "@storybook/vue3": "^10.1.8",
    "@storybook/vue3-vite": "^10.1.8",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/browser-playwright": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "chromatic": "^13.3.4",
    "playwright": "^1.57.0",
    "sass": "^1.96.0",
    "storybook": "^10.1.10",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.15",
    "vue": "^3.5.25"
  },
  "storybook-mcp": {
    "enabled": true,
    "port": 6006,
    "host": "localhost"
  }
}
